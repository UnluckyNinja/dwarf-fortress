#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_build:
	@xsltproc --nonet \
	          --param make.year.ranges 1 \
	          --param make.single.year.ranges 1 \
	          --param man.charmap.use.subset 0 \
	          -o debian/ \
	          http://docbook.sourceforge.net/release/xsl/current/manpages/docbook.xsl\
	          debian/dwarf-fortress.6.xml
	@xsltproc --nonet \
	          --param make.year.ranges 1 \
	          --param make.single.year.ranges 1 \
	          --param man.charmap.use.subset 0 \
	          -o debian/ \
	          http://docbook.sourceforge.net/release/xsl/current/manpages/docbook.xsl\
	          debian/dwarf-fortress-configure.6.xml
	@xsltproc --nonet \
	          --param make.year.ranges 1 \
	          --param make.single.year.ranges 1 \
	          --param man.charmap.use.subset 0 \
	          -o debian/ \
	          http://docbook.sourceforge.net/release/xsl/current/manpages/docbook.xsl\
	          debian/dwarf-fortress-mod.6.xml
	cp debian/dwarf-fortress.6 debian/dwarf-fortress-bin.6
	dh_auto_build

binary:
	dh_testroot
	dh_prep
	dh_installdirs
	dh_auto_install
	dh_install
	dh_installdocs
	dh_installchangelogs
	dh_installexamples
	dh_installman
	dh_installcatalogs
	dh_installcron
	dh_installdebconf
	dh_installemacsen
	dh_installifupdown
	dh_installinfo
	dh_pysupport
	dh_installinit
	dh_installmenu
	dh_installmime
	dh_installmodules
	dh_installlogcheck
	dh_installlogrotate
	dh_installpam
	dh_installppp
	dh_installudev
	dh_installwm
	dh_installxfonts
	dh_bugfiles
	dh_lintian
	dh_gconf
	dh_icons
	dh_perl
	dh_usrlocal
	dh_link
	dh_compress
	dh_fixperms
	dh_strip
	dh_makeshlibs
	LD_LIBRARY_PATH=/usr/lib/dwarf-fortress/:$LD_LIBRARY_PATH dh_shlibdeps -l/usr/lib32:$LD_LIBRARY_PATH
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
